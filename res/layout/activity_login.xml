<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg" >

    <TextView
        android:id="@+id/tv_course_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="扫扫二维码签到"
        android:textColor="@color/sbc_header_view" />

    <View
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_course_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#5B5D69" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/pic_login" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/iv_result"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_et"
        android:drawableLeft="@drawable/ic_username"
        android:drawablePadding="20dp"
        android:hint="学  号"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/encode_view" >
    </EditText>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_username"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_et"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="20dp"
        android:hint="密  码"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/encode_view" >
    </EditText>

    <Button
        android:id="@+id/et_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_bt"
        android:text="登  录"
        android:textColor="@color/sbc_header_view"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="为保证正常签到,请允许应用获取位置信息"
        android:textColor="#FF5F75" />

</RelativeLayout>